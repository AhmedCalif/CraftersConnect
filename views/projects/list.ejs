<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects</title>
    <link rel="stylesheet" href="/projects.css" />
  </head>
  <body>
    <div class="sidebar">
      <div class="profile-section">
        <img src="<%= avatar %>" alt="User profile" class="profile-pic" />
        <h2><%= username %></h2>
      </div>
      <ul class="menu-items">
        <li>
          <a href="/home/dashboard"><i class="fas fa-home"></i> Home</a>
        </li>
        <li>
          <a href="/profile"><i class="fas fa-user"></i> Profile</a>
        </li>
        <li>
          <a href="/my-projects"><i class="fa fa-briefcase"></i> Projects</a>
        </li>
        <li>
          <a href="/posts"><i class="fa fa-newspaper"></i>Posts</a>
        </li>
        <li>
          <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Log out</a>
        </li>
      </ul>
    </div>
    <div class="header">
      <div class="menu-icon">
        <a href="#" id="menu-toggle">
          <img
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1200px-Hamburger_icon.svg.png"
            alt="Menu icon"
          />
        </a>
      </div>

      <div class="action-buttons">
        <a
          href="/projects/create"
          class="add-projects-button"
          onclick="document.getElementById('addProjectForm').style.display='block'"
        >
          <button>Add Project</button>
        </a>
      </div>
    </div>
    <form action="/search/results" method="GET">
      <div class="search-bar action-buttons">
        <p>Looking For A New Project?</p>
        <input type="text" name="query" placeholder="Search" />
        <button class="button">Search</button>
        <button id="filterRecent">Filter by Most Recent</button>
        <div id="projects"></div>
      </div>
    </form>

    <div class="container">
      <h1>Projects From All Users</h1>
      <% projects.forEach(project => { %>
      <div class="card">
        <img
          src="<%= project.User.Avatar ? project.User.Avatar.imageUrl : 'default-avatar.png' %>"
          alt="<%= project.User.username %>"
          class="profile-pic"
        />
        <h2><%= project.title %></h2>
        <% if (project.User) { %>
        <p><strong>Created by:</strong> <%= project.User.username %></p>
        <% } else { %>
        <p><strong>Created by:</strong> Unknown</p>
        <% } %>
        <p><strong>Description:</strong> <%= project.description %></p>
        <p><strong>Date:</strong> <%= project.date.toDateString() %></p>

        <!-- Check if the project has collaborators -->
        <% if (project.Collaborators && project.Collaborators.length > 0) { %>
        <p>
          <strong>Collaborators:</strong>
          <% project.Collaborators.forEach(collaborator => { %> <%=
          collaborator.username %>, <% }); %>
        </p>
        <% } else { %>
        <p>No collaborators found.</p>
        <% } %>

        <!-- Logic for displaying the appropriate button -->
        <% const isCreator = project.User && project.User.username === username;
        const isCollaborator = project.Collaborators &&
        project.Collaborators.some(collaborator => collaborator.username ===
        username); %> <% if (!isCreator) { %> <% if (isCollaborator) { %>

        <form action="/projects/<%= project.projectId %>/leave" method="POST">
          <div class="action-buttons">
            <button type="submit">Leave</button>
          </div>
        </form>
        <% } else { %>
        <form action="/projects/<%= project.projectId %>/join" method="POST">
          <div class="action-buttons">
            <button type="submit">Join</button>
          </div>
        </form>
        <% } %> <% } %>
        <br />
        <a href="/projects/<%= project.projectId %>">View More</a>
      </div>
      <% }); %>
    </div>

    <script defer src="/script.js">
        document.getElementById('filterRecent').addEventListener('click', () => {
      fetch('/projects?sortBy=createdAt&sortOrder=DESC')
        .then(response => response.json())
        .then(data => {
          const projectsDiv = document.getElementById('projects');
          projectsDiv.innerHTML = ''; // Clear previous results
          data.forEach(project => {
            const projectDiv = document.createElement('div');
            projectDiv.textContent = project.title; // Display project title
            projectsDiv.appendChild(projectDiv);
          });
        })
        .catch(error => console.error('Error:', error));
    });
    </script>
  </body>
</html>
