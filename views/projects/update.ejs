
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Project</title>
    <link rel="stylesheet" href="/projects.css">
</head>
<body>
<div class="container">
    <div class="card">
        <h1>Update Project</h1>
        <form action="/projects/<%= project.projectId %>/update" method="post">
            <label for="title">Project Title:</label>
            <input type="text" id="title" name="title" value="<%= project.title %>" required>
            <input type="hidden" name="username" value="<%= username %>" />
            
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" value="<%= project.description %>" required>
            
            <label for="date">Date:</label>
            <input type="text" id="date" name="date" value="<%= project.date %>" required>
            
            <label for="steps">Steps:</label>
            <div id="stepsContainer">
                <% project.steps.forEach((step, index) => { %>
                    <div>
                        <input type="hidden" name="steps[<%= index %>][id]" value="<%= step.id %>">
                        <label for="step<%= index %>">Step <%= index + 1 %>:</label>
                        <input type="text" name="steps[<%= index %>][description]" value="<%= step.description %>">
                        <button type="button" class="deleteStepBtn">Delete</button>
                    </div>
                <% }); %>
            </div>
            
            <div class="action-buttons">
                <button type="button" id="addStepBtn">Add Step</button>
                <button type="submit">Update Project</button>
                <a href="/projects">
                    <button type="button">Go Back</button>
                </a>
            </div>
        </form>
    </div>
</div>

