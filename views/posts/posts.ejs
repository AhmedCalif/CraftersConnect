<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community Posts</title>
  <link rel="stylesheet" href="/posts.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Mada:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="sidebar">
        <div class="profile-section">
            <img src="<%= avatar %>" alt="User profile" class="profile-pic">
            <h2><%= username %></h2>  
        </div>
        <ul class="menu-items">
            <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
            <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Log out</a></li>
        </ul>
    </div>
    <div class="header">
        <div class="menu-icon">
            <a href="#" id="menu-toggle">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1200px-Hamburger_icon.svg.png" alt="Menu icon">
            </a>
        </div>
        <div class="action-buttons">
        <a href="/posts/create"  class="add-post-button" onclick="document.getElementById('addPostForm').style.display='block'">
            <button>Add Post</button>
        </a>
        </div>
    </div>
    <div class="container">
        <% posts.forEach(post => { %>
          <div class="card">
            <img src="<%= post.avatar || 'default-avatar.png' %>" alt="<%= post.createdBy %>" class="profile-pic">
            <div><strong>By <%= post.createdBy %></strong></div>
            <h2><%= post.title %></h2>
            <p><%= post.description %></p>
            <button onclick="likePost('<%= post.id %>')">Like</button> 
            <span>Likes: <span id="likes-count-<%= post.id %>"><%= typeof post.currentLikes === 'number' ? post.currentLikes : 0 %></span></span>
          </div>
        <% }); %>
      </div>
    <script defer src="/script.js"></script>  
</body>
</html>