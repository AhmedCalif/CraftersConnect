<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/profile.css"> 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Mada:wght@400;500;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div class="sidebar">
    <div class="profile-section">
      <img src="<%= avatar %>" alt="User profile" id="profileAvatar" class="profile-pic">
      <h2><%= user.username %></h2>
    </div>
    <div class="menu-icon">
      <a href="#" id="menu-toggle">
        <i class="fas fa-bars"></i> 
      </a>
    </div>
    <ul class="menu-items">
      <li><a href="/home/dashboard"><i class="fas fa-home"></i> Home</a></li>
      <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
      <li><a href="/my-projects"><i class="fa fa-briefcase"></i> Projects</a></li>
      <li><a href="/posts"><i class="fa fa-newspaper"></i> Posts</a></li>
      <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Log out</a></li>
    </ul>
  </div>
  <div class="profile-container">
    <div class="profile-info">
      <img src="<%= avatar %>" alt="User profile" id="profileAvatar" class="profile-pic">
      <div class="user-details">
        <h1><%= user.username %></h1>
        <p>Email: <%= user.email %></p>
        <form id="avatarForm" action="/profile/upload-avatar" method="post" enctype="multipart/form-data">
          <input type="file" name="avatar" required>
          <button type="submit" class="button">Upload Avatar</button>
        </form>
      </div>
    </div>
  </div>

  <script defer src="/app.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('#avatarForm');
      const submitButton = form.querySelector('button[type="submit"]');
      const profileAvatar = document.querySelector('#profileAvatar');

      form.addEventListener('submit', function(event) {
        event.preventDefault();
        submitButton.disabled = true;

        const formData = new FormData(this);
        fetch('/profile/upload-avatar', {
          method: 'POST',
          body: formData,
        })
        .then(response => {
          console.log('Response:', response);
          if (!response.ok) {
            throw new Error('Network response was not ok: ' + response.statusText);
          }
          return response.json();
        })
        .then(data => {
          console.log('Avatar uploaded:', data);
          if (data.imageUrl) {
            profileAvatar.src = data.imageUrl + '?' + new Date().getTime();
            Swal.fire({
              icon: 'success',
              title: 'Avatar uploaded successfully!',
              showConfirmButton: false,
              timer: 1500
            });
          } else {
            throw new Error('Image URL not provided in response.');
          }
        })
        .catch(error => {
          console.error('Error uploading avatar:', error);
          Swal.fire({
            icon: 'error',
            title: 'Error uploading avatar',
            text: error.message,
            showConfirmButton: true
          });
        })
        .finally(() => {
          submitButton.disabled = false;
        });
      });
    });
  </script>
</body>
</html>

