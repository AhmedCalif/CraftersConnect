<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Projects</title>
  <link rel="stylesheet" href="/projects.css" />
</head>
<body>
  <div class="sidebar">
    <div class="profile-section">
      <img src="<%= avatarUrl %>" alt="User profile" class="profile-pic" />
      <h2><%= user.username %></h2>
    </div>
    <ul class="menu-items">
      <li><a href="/home/dashboard"><i class="fas fa-home"></i> Home</a></li>
      <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
      <li><a href="/my-projects/all"><i class="fa fa-briefcase"></i> Projects</a></li>
      <li><a href="/posts"><i class="fa fa-newspaper"></i> Posts</a></li>
      <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Log out</a></li>
    </ul>
  </div>
  <div class="header">
    <div class="menu-icon">
      <a href="#" id="menu-toggle">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1200px-Hamburger_icon.svg.png" alt="Menu icon" />
      </a>
    </div>
    <div class="action-buttons">
      <a href="/projects/create" class="add-projects-button">
        <button>Add Project</button>
      </a>
    </div>
  </div>

  <div>
    <a href="/my-projects/all">All projects</a>
    <a href="/my-projects/collaborated">Collaborated Projects</a>
    <a href="/my-projects/created">Created Projects</a>
  </div>
  <div class="container" id="projects">
    <h1>All Projects</h1>
    <% allProjects.forEach(project => { %>
      <div class="card">
        <img src="<%= project.Image && project.Image.link ? project.Image.link : 'https://i.pravatar.cc/150?img=3' %>" alt="<%= project.title %> cover image" class="cover-pic" />
        <h2><%= project.title %></h2>
        <% if (project.Creator) { %>
          <p><strong>Created by:</strong> <%= project.Creator.username %></p>
        <% } else { %>
          <p><strong>Created by:</strong> Unknown</p>
        <% } %>
        <p><strong>Description:</strong> <%= project.description %></p>
        <p><strong>Date:</strong> <%= new Date(project.date).toDateString() %></p>
        <% if (project.Creator && project.Creator.username === loggedInUsername) { %>
          <div class="action-buttons">
            <a href="/projects/<%= project.projectId %>/update">
              <button type="button">Edit Project</button>
            </a>
            <a href="/projects/<%= project.projectId %>/delete">
              <button type="button">Delete Project</button>
            </a>
          </div>
        <% } %>
        <% if (project.Collaborators && project.Collaborators.map(c => c.username).includes(loggedInUsername)) { %>
          <form action="/projects/<%= project.projectId %>/leave" method="POST">
            <div class="action-buttons">
              <button type="submit">Leave</button>
            </div>
          </form>
        <% } %>
        <br />
        <a href="/projects/<%= project.projectId %>">View More</a>
      </div>
    <% }); %>

    


  </div>
  <script defer src="/script.js"></script>
</body>
</html>
