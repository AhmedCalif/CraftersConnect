<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Projects</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Mada:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/projects.css" />
</head>
<body>
  <div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3">All Projects</h1>
      <a href="/projects/create" class="btn btn-primary">Add Project</a>
    </div>
    <nav>
      <div class="nav nav-tabs mb-3">
        <a href="/my-projects/all" class="nav-item nav-link active">All Projects</a>
        <a href="/my-projects/collaborated" class="nav-item nav-link">Collaborated Projects</a>
        <a href="/my-projects/created" class="nav-item nav-link">Created Projects</a>
      </div>
    </nav>
    <div class="row" id="projects">
      <% allProjects.forEach(project => { %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <img src="<%= project.Image && project.Image.link ? project.Image.link : 'https://i.pravatar.cc/150?img=3' %>" alt="<%= project.title %> cover image" class="card-img-top cover-pic" />
            <div class="card-body">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text"><strong>Created by:</strong> <%= project.Creator ? project.Creator.username : 'Unknown' %></p>
              <p class="card-text"><strong>Description:</strong> <%= project.description %></p>
              <p class="card-text"><strong>Date:</strong> <%= new Date(project.date).toDateString() %></p>
              <% if (project.Creator && project.Creator.username === loggedInUsername) { %>
                <div class="d-flex justify-content-between">
                  <a href="/projects/<%= project.projectId %>/update" class="btn btn-outline-primary">Edit Project</a>
                  <a href="/projects/<%= project.projectId %>/delete" class="btn btn-outline-danger">Delete Project</a>
                </div>
              <% } %>
              <% if (project.Collaborators && project.Collaborators.map(c => c.username).includes(loggedInUsername)) { %>
                <form action="/projects/<%= project.projectId %>/leave" method="POST" class="mt-2">
                  <button type="submit" class="btn btn-outline-secondary">Leave</button>
                </form>
              <% } %>
              <a href="/projects/<%= project.projectId %>" class="btn btn-link mt-2">View More</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <nav class="navbar navbar-expand navbar-light bg-light fixed-bottom">
    <ul class="navbar-nav nav-justified w-100">
        <li class="nav-item">
            <a class="nav-link" href="/home/dashboard">
                <i class="fas fa-home"></i><br>Home
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/my-projects/all">
                <i class="fas fa-briefcase"></i><br>Projects
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/posts">
                <i class="fas fa-newspaper"></i><br>Posts
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/profile">
                <i class="fas fa-user"></i><br>Profile
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/auth/logout">
                <i class="fas fa-sign-out-alt"></i><br>Logout
            </a>
        </li>
    </ul>
  </nav>
  <script defer src="/script.js"></script>
</body>
</html>
