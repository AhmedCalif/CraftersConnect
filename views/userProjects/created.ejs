<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Projects</title>
  <link rel="stylesheet" href="/projects.css" />
</head>
<body>
  <div class="sidebar">
    <div class="profile-section">
      <img src="<%= avatarUrl %>" alt="User profile" class="profile-pic" />
      <h2><%= user.username %></h2>
    </div>
    <ul class="menu-items">
      <li>
        <a href="/home/dashboard"><i class="fas fa-home"></i> Home</a>
      </li>
      <li>
        <a href="/profile"><i class="fas fa-user"></i> Profile</a>
      </li>
      <li>
        <a href="/my-projects/all"><i class="fa fa-briefcase"></i> Projects</a>
      </li>
      <li>
        <a href="/posts"><i class="fa fa-newspaper"></i> Posts</a>
      </li>
      <li>
        <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Log out</a>
      </li>
    </ul>
  </div>
  <div class="header">
    <div class="menu-icon">
      <a href="#" id="menu-toggle">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1200px-Hamburger_icon.svg.png" alt="Menu icon" />
      </a>
    </div>
    <div class="action-buttons">
      <a href="/projects/create" class="add-projects-button">
        <button>Add Project</button>
      </a>
    </div>
  </div>
  <div class="container" id="projects">
    


    <h1>Created Projects</h1>
    <% createdProjects.forEach(project => { %>
    <div class="card">
      <img src="<%= project.Creator && project.Creator.Avatar ? project.Creator.Avatar.imageUrl : 'https://i.pravatar.cc/150?img=3' %>" alt="<%= project.Creator ? project.Creator.username : 'Unknown' %>" class="profile-pic" />
      <h2><%= project.title %></h2>
      <% if (project.Creator) { %>
      <p><strong>Created by:</strong> <%= project.Creator.username %></p>
      <% } else { %>
      <p><strong>Created by:</strong> Unknown</p>
      <% } %>
      <p><strong>Description:</strong> <%= project.description %></p>
      <p><strong>Date:</strong> <%= new Date(project.date).toDateString() %></p>
      <% if (project.Collaborators && project.Collaborators.length > 0) { %>
      <p><strong>Collaborators:</strong>
        <% project.Collaborators.forEach(collaborator => { %> <%= collaborator.username %>, <% }); %>
      </p>
      <% } else { %>
      <p>No collaborators found.</p>
      <% } %>
      <br />
      <a href="/projects/<%= project.projectId %>">View More</a>
      <% if (project.Creator && project.Creator.username === loggedInUsername) { %>
        <div class="action-buttons">
          <a href="/projects/<%= project.projectId %>/update">
            <button type="button">Edit Project</button>
          </a>
          <a href="/projects/<%= project.projectId %>/delete">
            <button type="button">Delete Project</button>
          </a>
        </div>
      <% } %>
    </div>
    <% }); %>
  
    <script defer src="/script.js">
    </script>
  </body>
</html>
