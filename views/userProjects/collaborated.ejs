<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collaborated Projects</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="sidebar">
        <div class="profile-section">
            <img src="<%= user.avatar %>" alt="User profile" class="profile-pic">
            <h2><%= user.username %></h2>
        </div>
        <ul class="menu-items">
            <li><a href="/dashboard">Home</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/projects/collaborated">Collaborated Projects</a></li>
            <li><a href="/logout">Log Out</a></li>
        </ul>
    </div>
    <div class="main-content">
        <h1>Projects I've Collaborated On</h1>
        <div class="project-list">
            <% if (projects.length > 0) { %>
                <% projects.forEach(function(project) { %>
                    <div class="project-card">
                        <h3><%= project.title %></h3>
                        <p><%= project.description %></p>
                        <a href="/projects/<%= project.id %>">View Details</a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No collaborated projects found.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
