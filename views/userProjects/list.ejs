<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Projects</title>
    <link rel="stylesheet" href="/projects.css">
</head>
<body>
    <aside class="sidebar">
        <section class="profile-section">
            <img src="<%= avatar %>" alt="Profile picture of <%= username %>" class="profile-pic">
            <h2><%= username %></h2>
        </section>
        <nav>
            <ul class="menu-items">
                <li><a href="/home/dashboard"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
                <li><a href="/my-projects"><i class="fa fa-briefcase"></i> Projects</a></li>
                <li><a href="/posts"><i class="fa fa-newspaper"></i> Posts</a></li>
                <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Log out</a></li>
            </ul>
        </nav>
    </aside>
    <header>
        <div class="menu-icon">
            <a href="#" id="menu-toggle"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Hamburger_icon.svg/1200px-Hamburger_icon.svg.png" alt="Menu toggle"></a>
        </div>
        <div class="action-buttons">
            <a href="/projects/create" class="add-projects-button" onclick="document.getElementById('addProjectForm').style.display='block'">
                <button>Add Project</button>
            </a>
        </div>
    </header>
    <div class="filters">
      <a href="/my-projects/created">My Created Projects</a>
      <a href="/my-projects/collaborated">Collaborated Projects</a>
      <a href="/my-projects/all">All Projects</a>
      
    </div>
    <main class="container" id="projects">
        <h1><%= user.username %>'s Projects</h1>
        <ul>
            <% projects.forEach(project => { %>
                <li class="card">
                    <h2><%= project.title %></h2>
                    <p><strong>By:</strong> <%= project.User.username %></p>
                    <p><%= project.description %></p>
                    <p><strong>Date:</strong> <%= new Date(project.date).toDateString() %></p>
                    <a href="/projects/<%= project.projectId %>">View More</a>
                </li>
            <% }); %>
        </ul>
        <div class="action-buttons">
            <a href="/projects">
                <button>View All Projects</button>
            </a>
        </div>
    </main>
    <script src="/script.js"></script>
</body>
</html>
