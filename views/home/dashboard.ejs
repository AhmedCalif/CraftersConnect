<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/homepage.css">
</head>
<body>
    <div class="header">
        <h1>Welcome Back <%= user.username %>!</h1>
        <div class="action-buttons">
            <a href="/auth/logout">
                <button>Logout</button>
            </a>
        </div>
    </div>
        <div class="search-bar action-buttons">
            <p>Looking For Something? </p>
            <input type="text" placeholder="Search">
            <button class="button">Search</button>
        </div>
        <div class="recent-projects">
            <h2>Recently Viewed Projects</h2>
            <% projects.forEach(function(project) { %>
                <div class="card">
                    <img src="<%= project.imageUrl %>" alt="Project Image">
                    <div class="card-details">
                        <h3><%= project.title %></h3>
                        <p>Description: <%= project.description %></p>
                        <p>Date: <%= project.date %></p>
                        <a href="/projects/<%= project.id %>">View More</a>
                    </div>
                </div>
            <% }); %>
            <div class="action-buttons">
                <a href="/projects"  class="add-post-button" onclick="document.getElementById('addPostForm').style.display='block'">
                    <button>Projects</button>
                </a>
                </div>
        </div>
        <img
  loading="lazy"
  srcset="https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=100 100w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=200 200w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=400 400w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=800 800w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=1200 1200w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=1600 1600w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&width=2000 2000w, https://cdn.builder.io/api/v1/image/assets/TEMP/5f85e2027a4a2f8230e595d8435075d5d8abd8ae921ce586a3a8f9e287d1d439?apiKey=43882fedecf6460998ef8240965c4e1d&"
  class="img"
/>
        <div class="new-today">
            <h2>What's New Today</h2>
            <% posts.forEach(post => { %>
                <div class="card">
                  <img src="<%= post.creator && post.creator.Avatar ? post.creator.Avatar.imageUrl : 'default-avatar.jpg' %>" alt="User Avatar" style="width: 100px; height: 100px; border-radius: 50%;">
                  <div><strong>By <%= post.creator ? post.creator.username : 'Unknown User' %></strong></div>
                  <h2><%= post.title %></h2>
                  <p><%= post.description %></p>
                  <div class="action-buttons">
                  </div>
                </div>
              <% }); %>
                <div class="action-buttons">
                    <a href="/posts"  class="add-post-button" onclick="document.getElementById('addPostForm').style.display='block'">
                        <button>Community</button>
                    </a>
                    </div>
            </div>
    </div>
</body>
</html>


